<Page x:Class="GitHub.UnoPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:GitHub.UnoPages"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      Background="{ThemeResource BackgroundBrush}">
  <StackPanel utu:SafeArea.Insets="VisibleBounds"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
    <TextBlock AutomationProperties.AutomationId="HelloTextBlock"
          Text="Hello Uno Platform"
          HorizontalAlignment="Center" />
    <TextBlock AutomationProperties.AutomationId="AnotherTextBlock" Text="Some other test" HorizontalAlignment="Center" />
  </StackPanel>
</Page>
